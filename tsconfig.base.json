{
    "compilerOptions": {
        "esModuleInterop": true,
        "allowJs": true,
        "checkJs": true,
        "target": "ES2019",
        "moduleResolution": "node",
        "declaration": false,
        "strict": true,
        "resolveJsonModule": true,
        "skipLibCheck": true
    },
    "exclude": ["**/node_modules/*", "**/lib/*", "**/scripts/**/*.js"]
}